{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist", // Compiled JS output directory
    "rootDir": "./src", // Where your TypeScript files are located
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Include all files inside the src folder
  "exclude": ["node_modules"]
}
